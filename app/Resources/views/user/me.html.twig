{% extends 'base.html.twig' %}
{% block body %}
    <h1 class="text-center">Hello, {{ user.username }}</h1>

    <div class="row row-centered">
        <div class="col-centered col-md-5">
            <table class="table table-info">
                <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Username</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Role</th>
                    <td>{{ user.role }}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}